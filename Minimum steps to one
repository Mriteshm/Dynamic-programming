import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Runner {

    static BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

    public static void main(String[] args) throws NumberFormatException, IOException {
            int n = Integer.parseInt(br.readLine().trim());
            System.out.println(countMinStepsToOne(n));
    }
static int b=0,c=0;
	public static int countMinStepsToOne(int n) {
		if(n==1)
		{
			return 0;
		}
		int ans1=1+countMinStepsToOne(n-1);
		int ans2= Integer. MAX_VALUE,ans3= Integer. MAX_VALUE ;
		if(n%2==0)
		{
		ans2=1+countMinStepsToOne(n/2);
		}
		if(n%3==0)
		{
		 ans3=1+countMinStepsToOne(n/3);
		}
		int ans=Math.min(ans1,ans2);
		ans=Math.min(ans,ans3);
		return ans;
	}

}
